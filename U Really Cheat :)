-- Load Orion Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Create Window
local Window = OrionLib:MakeWindow({Name = "Bypass Anti-Cheat Tester (Semi-Advanced)", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

-- Main Tab
local Tab = Window:MakeTab({
    Name = "Bypass Features",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local root = character:WaitForChild("HumanoidRootPart")

-- Smooth WalkSpeed Bypass
Tab:AddSlider({
    Name = "WalkSpeed Bypass",
    Min = 16,
    Max = 200,
    Default = 16,
    Increment = 1,
    Callback = function(value)
        task.spawn(function()
            for i = humanoid.WalkSpeed, value, (value - humanoid.WalkSpeed) / 10 do
                humanoid.WalkSpeed = i
                task.wait(0.1) -- Perubahan bertahap agar tidak terdeteksi
            end
        end)
    end
})

-- Smooth JumpPower Bypass
Tab:AddSlider({
    Name = "JumpPower Bypass",
    Min = 50,
    Max = 500,
    Default = 50,
    Increment = 1,
    Callback = function(value)
        task.spawn(function()
            for i = humanoid.JumpPower, value, (value - humanoid.JumpPower) / 10 do
                humanoid.JumpPower = i
                task.wait(0.1)
            end
        end)
    end
})

-- Improved Fly Bypass
local flying = false
Tab:AddToggle({
    Name = "Fly Bypass",
    Default = false,
    Callback = function(state)
        flying = state
        if flying then
            local flyForce = Instance.new("BodyVelocity")
            flyForce.Velocity = Vector3.new(0, 0, 0)
            flyForce.MaxForce = Vector3.new(4000, 4000, 4000)
            flyForce.Parent = root
            
            game:GetService("RunService").Stepped:Connect(function()
                if flying then
                    flyForce.Velocity = Vector3.new(0, 50, 0) + (root.Velocity * 0.1)
                else
                    flyForce:Destroy()
                end
            end)
        end
    end
})

-- Advanced Anti Teleport Balik
local lastPosition = root.Position
game:GetService("RunService").Stepped:Connect(function()
    if (root.Position - lastPosition).Magnitude > 50 then
        root.Position = lastPosition + Vector3.new(math.random(-2,2), 0, math.random(-2,2)) -- Gerakan acak agar tidak terdeteksi
    else
        lastPosition = root.Position
    end
end)

-- UI Toggle
OrionLib:Init()
